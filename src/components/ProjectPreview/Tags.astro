---
interface Props {
  tags: string[]
}
const tagMapping: { [k: string]: string } = {
  dev: "--c-blue",
  design: "--c-orange",
  branding: "--c-green",
}
const { tags } = Astro.props
---

<div class="tags">
  {
    tags.sort().map((tag: string) => (
      <div
        class="tag"
        data-tag={tag}
        style={`color: var(${tagMapping[tag as string] || "--c-pink"})`}
      >
        {tag}
      </div>
    ))
  }
</div>
<style>
  .tag {
    margin-right: 0.75rem;
  }

  .tags {
    justify-self: end;
    text-transform: uppercase;
    display: flex;
    flex-flow: row wrap;
    padding: 0.25rem 0;
  }
</style>
