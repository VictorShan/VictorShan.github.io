---
import Tags from "./Tags.astro"

const { frontmatter, url } = Astro.props.project
const { title, img, description, tags } = frontmatter
---

<article class="card">
  <div class="titleCard" style={`background-image:url("${img}")`}>
    <h1 class="title">{title}</h1>
  </div>
  <div class="descriptionCard bg-black">
    <p class="description">{description}</p>
    <Tags tags={tags} />
    <a href={url} class="link">
      <span class="linkInner">View</span>
    </a>
  </div>
</article>
<style lang="scss">
  .card {
    position: relative;
    color: white;
    height: 100%;
    width: 100%;

    display: grid;
    grid-template-columns: 1fr;
    grid-template-rows: 2fr 1fr;
  }

  .titleCard {
    background-size: cover;
    background-position: 50% 100%;

    display: flex;
    justify-content: center;
    align-items: center;
  }

  .title {
    text-transform: uppercase;
    font-weight: 900;
    font-size: xx-large;
    text-align: center;
    padding: 0.1rem 0.5rem;
    margin: 0.5rem;
    background-color: rgba(0, 0, 0, 0.5);
  }

  .descriptionCard {
    padding: 1.5rem;
    display: flex;
    flex-flow: column;
  }

  .description {
    width: 100%;
    max-height: 5rem;
    overflow: hidden;
    flex-grow: 1;
    margin-bottom: 0.5rem;
  }

  .link {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
    transition: opacity 150ms linear;
    background-color: rgba(0, 0, 0, 0.5);
    text-transform: uppercase;
    color: white;

    display: flex;
    justify-content: center;
    align-items: center;
  }

  .link:focus,
  .link:hover {
    opacity: 1;
  }

  .link:focus,
  .link:hover .linkInner {
    transform: translateY(0);
    border-color: rgba(255, 255, 255, 0.625);
  }

  .linkInner {
    padding: 0.375em 1em;
    border: 2px solid rgba(255, 255, 255, 0);
    transition: transform 300ms cubic-bezier(0, 0.4, 0.6, 1),
      border-color 1s linear;
    transform: translateY(25%);
  }
</style>
